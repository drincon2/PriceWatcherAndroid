<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inialLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100">

    <TextView
        android:id="@+id/itemNameString"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="66.6"
        android:gravity="center"
        android:text="@string/itemnamestring"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/initialString"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="left"
            android:text="@string/initialstring" />

        <TextView
            android:id="@+id/currentString"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="left"
            android:text="@string/currentstring" />

        <TextView
            android:id="@+id/changeString"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="left"
            android:text="@string/changestring" />
    </LinearLayout>
</LinearLayout>